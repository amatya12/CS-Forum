
@model CsForum.Models.Forum.ForumTopicModel

<h1> Welcome to the @Model.Forum.Title Forum</h1>

<span id="headingBtn">
    <a asp-controller="Post" 
    asp-action="Create" 
    asp-route-id ="@Model.Forum.Id"
     class="btn btn-newPost">Create Post</a></span>

@if(Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>

            @foreach(var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.ID">@post.Title</a>
                      
                    </td>
                    <td>
                        @post.Author
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>


            }



        </tbody>
    </table>

}
else
{
    <div class="noPosts">
        <h3>
            There are no @Model.Forum.Title posts yet.<br />
            Why not
            <a asp-controller="Post" asp-action="Create" asp-route-id ="@Model.Forum.Id">
                <span> Create</span>
            </a>
        </h3>
    </div>
}

